
/* Buttons Styling */

.button-type-primary {
    border-radius: 5px;
    background: #014F9D;
    height: 47px;

    display: flex;
    align-items: center;
    justify-content: center; 

    /* font style */
    color: #F8F8F8;
    text-align: center; 
    font-size: 16px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    letter-spacing: 3.2px;
    text-transform: uppercase;
}

.button-type-secondary {
    border-radius: 5px;
    background: #28392B;

    display: flex;
    align-items: center;
    justify-content: center; 

    /* font style */
    color: #F9F2EF;
    text-align: center; 
    font-size: 20px;
    font-style: normal;
    font-weight: 700;
    line-height: normal;
    letter-spacing: 4px;
    text-transform: uppercase;
}

/* header Styling */
header {
    box-shadow: 0px 2px 20px 0px rgba(0, 14, 29, 0.05);
    
    nav { 
        > div {
            > div {
                .main-menu {
                    li {
                        position: relative;
                        &:hover {
                            &:before {
                                content: "";
                                width: 100%;
                                height: 6px;
                                background: #859CCB;
                                position: absolute;
                                bottom: -10px;
                            }
                        }
                    }
                }
            }
        }
    }
}

/* Footer Styling */
footer {
    .footer {
        padding: 40px 0;

        .footer-content {
            
            gap: 120px;

            .column-1 {
                > div {
                    width: calc(50% - 40px);

                    h4 {
                        margin-bottom: 10px;
                    }

                    ul {
                        display: flex;
                        flex-direction: column;
                        gap: 10px;

                        li {
                            a {
                                color: #000E1D; 
                                font-size: 20px;
                                font-style: normal;
                                font-weight: 400;
                                line-height: 150%; /* 30px */
                                 

                                &.lighter-text {
                                    color: #000E1D; 
                                    font-size: 20px;
                                    font-style: normal;
                                    font-weight: 300;
                                    line-height: normal;
                                }
                            }

                            
                        }
                    }

                }
            }

            > div {
                width: calc(50% - 60px);
            }
        }
    }
    
    .sub-footer {
        p {
            color: #000; 
            font-size: 16px;
            font-style: normal;
            font-weight: 300;
            line-height: normal;
            padding: 7px 0;
        }
    }

    h4 {
        color: #000E1D; 
        font-size: 20px;
        font-style: normal;
        font-weight: 700;
        line-height: normal;
        letter-spacing: 4px;
        text-transform: uppercase;
    }
}